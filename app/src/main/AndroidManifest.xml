<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.janardhan.launchmodes1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.android.janardhan.launchmodes1.StandardModeActivity"
            android:label="@string/app_name"
			android:icon="@mipmap/ic_launcher"
            android:launchMode="standard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.janardhan.launchmodes1.SingleTaskActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.android.janardhan.launchmodes1.SingleTopActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.janardhan.launchmodes1.SingleInstanceActivity"
            android:launchMode="singleInstance" >
        </activity>

    </application>

</manifest>
